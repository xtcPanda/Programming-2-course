package problems;

import java.util.*;


/**
 *
 * @author STUDENT
 */
public class Problems {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
    /*
     * an algorithm that will output the account balance each year for 3 years given the initial balance and interest rate. The interest is calculated for one year by multiplying the current account balance by the interest
     * rate and adding this to the balance.
    */
        Scanner sc = new Scanner (System.in);
        double B = 0, I = 0;
        System.out.print("Enter your balance: ");
        B = sc.nextInt();
        System.out.println();
        System.out.print("Enter your interest: ");
        I = sc.nextInt();
        System.out.println();
        for (int i = 0; i < 3;i++)
        {
            double t = B * (I/100);
            B += t;
        }
        System.out.println("your balance after 3 yrs will be " + B);
        
    }
    
}

