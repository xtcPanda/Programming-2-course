package lab.pkg21;

import java.util.Scanner;

/**
 *
 * @author student
 */
public class Lab21 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // Lab 2 problem 1
        Scanner sc = new Scanner (System.in);
        int check,count = 0;
        float sum = 0,num;
        double avg = 0, sd = 0, sumDifSq = 0 , def = 0;
        do{
            count++;
            System.out.print("Enter a number ");
            num = sc.nextFloat();
            System.out.println();
            
            sum += num;
            avg = sum / count;
            def = num - avg;
            sumDifSq += Math.pow(def,2);
            sd += sumDifSq / (count-1);
            
            System.out.print("Enter '-999' to stop ");
            check = sc.nextInt();
        }while(check != -999);
        System.out.println("the count is " + count);
        System.out.println("the average is " + avg);
        System.out.println("the standard deviation is " + Math.sqrt(sd));
    }
    
}
